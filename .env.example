# Voice Reminder Service - Environment Configuration
# Copy this file to .env and update the values

# ===================
# 1. Database Configuration
# ===================
# Build the connection string carefully.
# Format: postgresql+psycopg://<user>:<password>@<host>:<port>
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me
POSTGRES_DB=voice_reminder
DATABASE_URL=postgresql+psycopg://postgres:change_me@localhost:5432/voice_reminder

# ===================
# 2. Application Settings
# ===================
DEBUG=false
LOG_LEVEL=INFO

# ===================
# 3. Voice/SMS Provider (Infobip)
# ===================
# REQUIRED for Real SMS Mode (sending actual messages).
# 1. Sign up at https://www.infobip.com/
# 2. Get API Key from Developer Dashboard
# 3. Get Base URL (e.g., https://xxxxx.api.infobip.com)
INFOBIP_API_KEY=your_infobip_api_key_here
INFOBIP_BASE_URL=https://your_base_url.api.infobip.com

# The Sender ID (can be 'InfoSMS', 'VoiceReminder', or a purchased number)
INFOBIP_FROM_NUMBER=VoiceReminder

# ===================
# 4. Mock Mode (Development)
# ===================
# Set to 'true' to simulate calls/SMS without calling Infobip.
# Set to 'false' to send REAL SMS messages (requires Infobip credentials above).
MOCK_MODE=true
MOCK_CALL_SUCCESS_RATE=0.9

# ===================
# 5. Worker & Webhooks
# ===================
# How often to check for due reminders (in seconds)
SCHEDULER_INTERVAL_SECONDS=30

# Webhook Secret (Optional, for signature verification)
WEBHOOK_SECRET=

# Public URL where Infobip sends status updates.
# For LOCAL DEV: Use ngrok (e.g., https://xyz.ngrok-free.app/webhooks/call-status)
# For PROD: Your deployed worker URL
WEBHOOK_URL=https://your-public-url.com/webhooks/call-status

# ===================
# 6. Frontend Settings
# ===================
# URL of the Backend API
VITE_API_URL=http://localhost:8000
# URL of the Worker Service (optional, if frontend talks to it directly)
VITE_WORKER_URL=http://localhost:8001

# ===================
# 7. CORS Configuration
# ===================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
